rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Helper to check if the user is the owner of a specific trip
    function isTripOwner(tripId) {
      return request.auth != null &&
        request.auth.uid ==
        get(/databases/$(database)/documents/trips/$(tripId)).data.userId;
    }

    // Helper to check if user is a member of a specific trip
    function isTripMember(tripId) {
      let tripDoc = get(/databases/$(database)/documents/trips/$(tripId));
      let tripData = tripDoc.data;
      return request.auth != null && (
        request.auth.uid == tripData.userId ||
        (tripData.joiners != null &&
         request.auth.uid in tripData.joiners)
      );
    }

    /* ================= TRIPS ================= */

    match /trips/{tripId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;

      allow update: if request.auth != null && (
        // Admin can update
        isAdmin() ||
        // Trip owner can update
        request.auth.uid == resource.data.userId ||
        // Members can update expenses field (legacy support/specific field check)
        (
          resource.data.joiners != null &&
          request.auth.uid in resource.data.joiners &&
          request.resource.data.diff(resource.data)
            .affectedKeys()
            .hasOnly(['expenses'])
        ) ||
        // User joining trip
        (
          request.resource.data.diff(resource.data)
            .affectedKeys()
            .hasOnly(['joiners']) &&
          request.auth.uid in request.resource.data.joiners
        )
      );

      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdmin()
      );

      /* ========== EXPENSES ========== */
      match /expenses/{expenseId} {
        allow read: if request.auth != null && isTripMember(tripId);
        allow create: if request.auth != null && isTripMember(tripId);

        // Update expense - Strict ownership (Payer or Creator only)
        allow update: if request.auth != null && (
          request.auth.uid == resource.data.paidBy ||
          (resource.data.keys().hasAll(['createdBy']) && request.auth.uid == resource.data.createdBy) ||
          isAdmin()
        );

        // Delete expense - Strict ownership (Payer or Creator only)
        allow delete: if request.auth != null && (
          request.auth.uid == resource.data.paidBy ||
          (resource.data.keys().hasAll(['createdBy']) && request.auth.uid == resource.data.createdBy) ||
          isAdmin()
        );
      }
    }

    /* ================= USERS ================= */

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == userId;
    }

    /* ================= COMMUNITIES ================= */

    match /communities/{communityId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;

      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.createdBy;

      allow update: if request.auth != null &&
        request.resource.data.diff(resource.data)
          .affectedKeys()
          .hasOnly(['memberCount']);

      match /members/{memberId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null &&
          request.auth.uid == memberId;

        allow update, delete: if request.auth != null && (
          request.auth.uid == memberId ||
          get(/databases/$(database)/documents/communities/$(communityId)/members/$(request.auth.uid))
            .data.role == 'admin'
        );
      }

      match /messages/{messageId} {
        allow read, create: if request.auth != null &&
          exists(/databases/$(database)/documents/communities/$(communityId)/members/$(request.auth.uid));

        allow update, delete: if request.auth != null && (
          request.auth.uid == resource.data.userId ||
          get(/databases/$(database)/documents/communities/$(communityId)/members/$(request.auth.uid))
            .data.role == 'admin'
        );
      }
    }

    /* ================= SOCIAL ================= */

    match /suggestedTravelers/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /localGuides/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /posts/{document} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    match /stories/{document} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    match /events/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /travelTips/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    /* ================= USER COMMUNITIES ================= */
    match /userCommunities/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      match /communities/{communityId} {
        allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    /* ================= CHATS ================= */

    match /chats/{chatId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;

      allow update: if request.auth != null &&
        resource.data.participants != null &&
        request.auth.uid in resource.data.participants;

      allow delete: if request.auth != null &&
        request.auth.uid == resource.data.createdBy;

      match /messages/{messageId} {
        allow read, create: if request.auth != null &&
          request.auth.uid in
          get(/databases/$(database)/documents/chats/$(chatId)).data.participants;

        // Allow participants to update delivery/read status fields
        allow update: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants &&
          request.resource.data.diff(resource.data)
            .affectedKeys()
            .hasOnly(['status', 'readAt', 'deliveredAt']);

        // Only the sender can delete their message
        allow delete: if request.auth != null &&
          request.auth.uid == resource.data.userId;
      }
    }
  }
}
